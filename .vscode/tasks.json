{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "/opt/homebrew/bin/g++-15",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O2",
                "main.cpp",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run with Input/Output",
            "type": "shell",
            "command": "./main < input.txt > output.txt",
            "dependsOn": "Build and Run"
        }
    ]
}
